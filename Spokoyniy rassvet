    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram Web App
        let tg = window.Telegram.WebApp;
        tg.expand();
        tg.ready();

        // –û—Å–Ω–æ–≤–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function openFeature(feature) {
            const features = {
                meditation: () => alert('üßò –ó–∞–ø—É—Å–∫ –º–µ–¥–∏—Ç–∞—Ü–∏–∏...'),
                vibration: () => alert('üì≥ –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –≤–∏–±—Ä–∞—Ü–∏–π...'),
                stats: () => alert('üìä –û—Ç–∫—Ä—ã—Ç–∏–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏...')
            };
            
            if (features[feature]) {
                features[feature]();
            }
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            
            if (message) {
                addMessage('user', message);
                input.value = '';
                
                // –ò–º–∏—Ç–∞—Ü–∏—è –æ—Ç–≤–µ—Ç–∞
                setTimeout(() => {
                    addMessage('support', '–°–ø–∞—Å–∏–±–æ –∑–∞ —Å–æ–æ–±—â–µ–Ω–∏–µ! –û—Ç–≤–µ—Ç–∏–º —Å–∫–æ—Ä–æ.');
                }, 1000);
            }
        }

        function addMessage(sender, text) {
            const container = document.getElementById('chatContainer');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}-message`;
            messageDiv.textContent = text;
            container.appendChild(messageDiv);
            container.scrollTop = container.scrollHeight;
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –¥–∞–Ω–Ω—ã—Ö –æ—Ç Telegram
        tg.MainButton.setText("–ì–æ—Ç–æ–≤–æ").show().onClick(function() {
            tg.close();
        });
    </script>
